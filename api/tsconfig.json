{
   "compilerOptions": {
      "lib": [
         "ES2021"
      ],
      "target": "ES2021",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "./build",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
   }
}